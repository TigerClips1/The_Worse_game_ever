    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "GDScript: Launch Pinned File",
            "type": "godot",
            "request": "launch",
            "scene": "pinned",
            "project": "",
            "additional_options": ""
        },
        
        {
            "name": "GDScript: Launch Current File",
            "type": "godot",
            "request": "launch",
            "scene": "current",
            "project": "",
            "additional_options": ""
        },
        
        {
            "name": "GDScript: Launch Project",
            "type": "godot",
            "request": "launch",
            "project": "",
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": ""
        },
        
        {
            "name": "Launch",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executableArguments": [
                "--path",
                ""
            ]
        },
        
        {
            "name": "Launch (Select Scene)",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executableArguments": [
                "--path",
                "",
                "SelectLaunchScene"
            ]
        },

        {
            "name": "Play in Editor",
            "type": "godot-mono",
            "mode": "playInEditor",
            "request": "launch"
        }
    ]
}